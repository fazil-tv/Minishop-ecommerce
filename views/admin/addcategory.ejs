<script>
    function addCategoryValidation() {
        event.preventDefault();
        const categoryname = document.getElementById('product_name').value;
        console.log(categoryname);
        const description = document.getElementById('product_disc').value;

        const validateCategoryName = (categoryname) => {
            const categoryRegex = /^[a-zA-Z0-9]+\s*[a-zA-Z0-9]*$/;
            return categoryRegex.test(categoryname);
        };

        const isCategoryValid = validateCategoryName(categoryname);

        if (isCategoryValid && description) {

            return console.log("Category name is valid");
        } else {
            console.log("Invalid category name or empty description");
        }
    }

    document.querySelector('form').addEventListener('submit', function (event) {
        event.preventDefault();
        addCategoryValidation();
    });

