            <script>
                function blockCategory(categoryId) {
                    console.log("kkkk");
                    console.log("category is :", categoryId);
                    const blockButton = document.getElementById(`blockButton${categoryId}`);
                    let text = blockButton.innerHTML;
                    if (text === 'block') {
                        console.log("heloow");
                        fetch(`/admin/blockCategory`, {
                            method: 'PUT',
                            headers: {
                                "Content-Type": "application/json"
                            },
                            
                            body: JSON.stringify({ categoryId })
                        })
                            .then(response => response.json())
                            .then(data => {
                                window.location.reload();

                            })
                            .catch(error => {
                                console.log("error", error);
                            });
                    }

                    else if (text === "unblock") {
                        fetch(`/admin/unblockCategory`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': "application/json"
                            },
                            body: JSON.stringify({ categoryId })

                        }).then(response => response.json())
                            .then(data => {
                                window.location.reload();
                            })
                            .catch(error => {
                                console.error("error", error);
                            })
                    }
                }

            </script>

            <script>
                function showConfirmationModal(categoryId,status) {
                    //button text changing
                    console.log(categoryId,status)
                    if (status == "true") {
                        document.getElementById('mbid').innerText = 'unblock'
                    } else {
                        document.getElementById('mbid').innerText = 'block'
                    }
                    document.querySelector('#modal-prodId').value=categoryId
                    $('#confirmationModal').data('categoryId', categoryId);

                    $('#confirmationModal').modal('show');
                }
                function confirmBlockCategory() {
                    const categoryId = document.querySelector('#modal-prodId').value;
                    blockCategory(categoryId)
                    $('#confirmationModal').modal('hide');
                }




                function confirmationeditModal(categoryId, status) {

                    $('#confirmationeditModal').data('categoryId', categoryId);
                    console.log("chexk:", categoryId);
                    $('#confirmationeditModal').modal('show');
                }

                function confirmEditCategory() {
                    const categoryId = $('#confirmationeditModal').data('categoryId');
                    console.log("what od")
                    console.log('check edit catogery'.categoryId);
                    editcategory(categoryId)
                    $('#confirmationeditModal').modal('hide');
                }

                function editcategory(categoryId) {
                    console.log("hi");
                    console.log("categoryId" + categoryId)
                    const editcategoryname = document.getElementById('editcategoryname').value;
                    const editcategorydesc = document.getElementById('editcategorydescription').value;

                    console.log(editcategoryname);
                    console.log(editcategorydesc);
                    $.ajax({
                        url: `/admin/editcategory/${categoryId}`,
                        type: 'PUT',
                        contentType: 'application/json',

                        data: JSON.stringify({ categoryId, editcategoryname, editcategorydesc }),
                        success: function (data) {
                            console.log(data.message);

                            // $('#changecategory').load('/admin/category #changecategory')
                            window.location.reload();


                        },
                        error: function (error) {
                            console.log("error", error);
                        }
                    });
                }




