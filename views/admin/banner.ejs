                                </th>
                                <th scope="col" class="th-header">
                                    <center>Edit</center>
                                </th>
                                <th scope="col" class="th-header">
                                    <center>List / Unlist</center>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < banner.length; i++) { %>
                                <% if (banner[i].is_blocked==false) { %>
                                    <tr>
                                        <td align="center">
                                            <%= i + 1 %>
                                        </td>
                                        <td align="center">
                                            <img src="/assets/images/banner/<%= banner[i].images %>"
                                                style="max-width: 150px; max-height: 70px;" alt="">
                                        </td>
                                        <td align="center">
                                            <%= banner[i].title %>
                                        </td>
                                        <td align="center">
                                            <%= banner[i].description %>
                                        </td>
                                        <td align="center">
                                            <%= banner[i].targeturl %>
                                        </td>
                                        <td align="center">
                                            <a href="/admin/editbanner?id=<%= banner[i]._id %>">edit</a>
                                        </td>
                                      
                                            <% if (banner[i].is_blocked) { %>
                                                <td align="center">
                                                <a  class="unblock-user" style="background-color: white !important;" data-user-id="<%= banner[i]._id %>">
                                                    <span class="badge rounded-pill alert-danger">Canceled</span>
                                                </a>
                                                </td>
                                                                 

                                                <% } else { %>
                                                    <td align="center">
                                                    <a class="block-user" style="background-color: white !important;" data-user-id="<%= banner[i]._id %>">
                                                        <span class="badge rounded-pill alert-warning">block</span>
                                                    </a>
                                                    </td>
                                                    <% } %>
                                    
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
