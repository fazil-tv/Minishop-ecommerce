        <!-- Modal -->
        <section>
            <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" id="mbid"
                                onclick="confirmblockproduct()"></button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>

            function blockproduct(productId) {

                console.log(productId);

                // Get the button element associated with the user
                const blockButton = document.getElementById(`blockButton${productId}`);

                let text = blockButton.innerHTML;
                if (text === "block") {
                    console.log("hiiiii")
                    $.ajax({
                        url: `/admin/blockProduct/${productId}`,
                        type: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify({ productId }),
                        success: function (data) {
                            console.log(data.message, 'data message from success');
                            // $(`#buttonContainer${productId}`).load(`admin/product #buttonContainer${productId}`)
                            // $('#buttonContainer').load('/admin/product #buttonContainer')
                            window.location.reload();

                        },
                        error: function (error) {
                            console.log("error", error);
                        }
                    });

                }


                else if (text === "unblock") {
                    $.ajax({
                        url: `/admin/blockProduct/${productId}`,
                        type: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify({ productId }),
                        success: function (data) {
                            console.log(data.message);
                            // $("#buttonContainer").load('/admin/product #buttonContainer')
                            window.location.reload();

                        },
                        error: function (error) {
                            console.log("error", error);
                        }
                    });

                }
            }


        </script>
        <script>
            function showConfirmationModal(productId, status) {
                //button text changing

                if (status == "true") {
                    document.getElementById('mbid').innerText = 'unblock'
                } else {
                    document.getElementById('mbid').innerText = 'block'
                }
                $('#confirmationModal').data('productId', productId);

                $('#confirmationModal').modal('show');
            }
            function confirmblockproduct() {
                const productId = $('#confirmationModal').data('productId');
                blockproduct(productId)
                $('#confirmationModal').modal('hide');
            }
        </script>

