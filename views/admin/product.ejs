    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <form class="searchform">
                    <div class="input-group">
                        <input list="search_terms" type="text" class="form-control" placeholder="Search term" />
                        <button class="btn btn-light bg" type="button"><i class="material-icons md-search"></i></button>
                    </div>
                    <datalist id="search_terms">
                        <option value="Products"></option>
                        <option value="New orders"></option>
                        <option value="Apple iphone"></option>
                        <option value="Ahmed Hassan"></option>
                    </datalist>
                </form>
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"><i
                        class="material-icons md-apps"></i></button>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon" href="#">
                            <i class="material-icons md-notifications animation-shake"></i>
                            <span class="badge rounded-pill">3</span>
                        </a>
                    </li>


                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                            aria-expanded="false"> <img class="img-xs rounded-circle"
                                src="assets/imgs/people/avatar-2.png" alt="User" /></a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item" href="#"><i class="material-icons md-perm_identity"></i>Edit
                                Profile</a>
                            <a class="dropdown-item" href="#"><i class="material-icons md-settings"></i>Account
                                Settings</a>
                            <a class="dropdown-item" href="#"><i
                                    class="material-icons md-account_balance_wallet"></i>Wallet</a>
                            <a class="dropdown-item" href="#"><i class="material-icons md-receipt"></i>Billing</a>
                            <a class="dropdown-item" href="#"><i class="material-icons md-help_outline"></i>Help
                                center</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#"><i
                                    class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="">
                <div class="content-header d-flex justify-content-center">
                    <h2 class="content-title">Products</h2>
                </div>


                <div class="pagination-area mt-30 mb-50">
                    <table id="tablePagination" class="table table-hover">
                        <thead style="background-color: #3BB77E;">
                            <tr>
                                <th scope="col" class="th-header">NO</th>
                                <th scope="col" class="th-header">Image</th>
                                <th scope="col" class="th-header">Name</th>
                                <th scope="col" class="th-header">Quantity</th>
                                <th scope="col" class="th-header">Category</th>
                                <th scope="col" class="th-header">Price</th>
                                <th scope="col" class="th-header">Offer</th>
                                <th scope="col" class="th-header">Edit</th>
                                <th scope="col" class="th-header">Update</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% if (product.length> 0) { %>
                                <% for (let i=0; i < product.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <b>
                                                <p>image not found</p>
                                            </b>
                                        </td>

                                        <td>
                                            <b>
                                                <%= product[i].name %>
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <%= product[i].quantity %>
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <%= product[i].category %>
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <%= product[i].price %>
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <%= product[i].offer %>
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <button class="Edit-category">EDIT</button>
                                            </b>
                                        </td>
                                        <td id="buttonContainer<%= product[i].id%>"> 

                                            <% if (product[i].is_blocked) { %>
                                                <button
                                                    onclick="showConfirmationModal('<%= product[i]._id %>','<%=product[i].is_blocked %>')"
                                                    class="unblock-category"
                                                    id="blockButton<%=product[i]._id %>">unblock</button>
                                                <% } else { %>
                                                    <button onclick="showConfirmationModal('<%= product[i]._id %>')"
                                                        class="block-category"
                                                        id="blockButton<%= product[i]._id %>">block</button>
                                                    <% } %>


                                        </td>

                                    </tr>
                                    <% } %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4">
                                                    <p>No Products found in the database</p>
                                                </td>
                                            </tr>
                                            <% } %>


                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Modal -->
        <section>
            <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to <span id="">block</span> this user?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" id="mbid"
                                onclick="confirmblockproduct()"></button>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <script>

            function blockproduct(productId) {

                console.log(productId);

                // Get the button element associated with the user
                const blockButton = document.getElementById(`blockButton${productId}`);

                let text = blockButton.innerHTML;
                if (text === "block") {
                    console.log("hiiiii")
                    $.ajax({
                        url: `/admin/blockProduct/${productId}`,
                        type: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify({ productId }),
                        success: function (data) {
                            console.log(data.message, 'data message from success');
                            // $(`#buttonContainer${productId}`).load(`admin/product #buttonContainer${productId}`)
                            $('#buttonContainer').load('/admin/product #buttonContainer')
                            // $('#buttonContainer${productId}').load('/admin/product #buttonContainer${productId}')

                            // Change text of the button
                           // $(`#blockButton${productId}`).text('block');//
                            // Change style of the button
                          //  $(`#blockButton${productId}`).css('background-color', 'blue');//
                        },
                        error: function (error) {
                            console.log("error", error);
                        }
                    });
                    
                }


                else if (text === "unblock") {
                    $.ajax({
                        url: `/admin/blockProduct/${productId}`,
                        type: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify({ productId }),
                        success: function (data) {
                            console.log(data.message);
                            $("#buttonContainer").load('/admin/product #buttonContainer')

                        },
                        error: function (error) {
                            console.log("error", error);
                        }
                    });
                  
                }
            }


        </script>
        <script>
            function showConfirmationModal(productId, status) {
                //button text changing

                if (status == "true") {
                    document.getElementById('mbid').innerText = 'unblock'
                } else {
                    document.getElementById('mbid').innerText = 'block'
                }
                $('#confirmationModal').data('productId', productId);

                $('#confirmationModal').modal('show');
            }
            function confirmblockproduct() {
                const productId = $('#confirmationModal').data('productId');
                blockproduct(productId)
                $('#confirmationModal').modal('hide');
            }
        </script>

        <div class="d-flex justify-content-center pb-5">
            <a href="/admin/addproduct" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Add
                products</a>
        </div>



        <!-- content-main end// -->
        <footer class="main-footer font-xs pt-5 ">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <div class="text-sm-end">All rights reserved</div>
                </div>
            </div>
        </footer>
    </main>
