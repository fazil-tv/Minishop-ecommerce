<script>

    function addCouponValidation() {
        event.preventDefault();
        const couponname = document.getElementById('couponname').value;
        const couponCode = document.getElementById('couponCode').value;
        const DiscountPercentage = parseFloat(document.getElementById('DiscountPercentage').value);
        const MaxDiscount = parseFloat(document.getElementById('MaxDiscount').value);
        const ActivateDate = document.getElementById('ActivateDate').value;
        const ExpiryDate = document.getElementById('ExpiryDate').value;
        const CriteriaAmount = parseFloat(document.getElementById('CriteriaAmount').value);

        document.getElementById('error-messages').innerText = '';
        document.getElementById('couponname-e').innerText = '';
        document.getElementById('couponCode-e').innerText = '';
        document.getElementById('DiscountPercentage-e').innerText = '';
        document.getElementById('MaxDiscount-e').innerText = '';
        document.getElementById('ActivateDate-e').innerText = '';
        document.getElementById('CriteriaAmount-e').innerText = '';
        document.getElementById('ExpiryDate-e').innerText = '';


        let isValid = true;

        if (!couponname || !couponCode || isNaN(DiscountPercentage) || isNaN(MaxDiscount) || !ActivateDate || !ExpiryDate || isNaN(CriteriaAmount)) {
            isValid = false;
            document.getElementById('error-messages').innerText = 'Please fill in all required fields.';
            return isValid;
        }

        const regex = /^[a-zA-Z0-9]{8}$/;
        if (!regex.test(couponCode)) {
            document.getElementById('couponCode-e').textContent = 'Coupon code must be 8 characters long and alphanumeric';
            isValid = false;
        }

        if (DiscountPercentage < 0 || DiscountPercentage > 100) {
            document.getElementById('DiscountPercentage-e').innerText = 'Discount percentage must be between 0 and 100';
            isValid = false;
        }
        if (CriteriaAmount < 0) {
            document.getElementById('CriteriaAmount-e').textContent = 'Criteria amount cannot be negative';
            isValid = false;
        }

        const activateDate = new Date(ActivateDate);
        const expiryDate = new Date(ExpiryDate);
        if (isNaN(activateDate) || isNaN(expiryDate)) {
            document.getElementById('ActivateDate-e').innerText = 'Invalid date format';
            document.getElementById('ExpiryDate-e').innerText = 'Invalid date format';
            isValid = false;
        } else if (expiryDate <= activateDate) {
            document.getElementById('ActivateDate-e').innerText = 'Expiry date must be after activate date';
            isValid = false;
        }
        if (!isValid) {
            return

        }
        else {
            alert("kkkkkk")
            addcoupon()


        }
    }

    function addcoupon() {
        const couponname = document.getElementById('couponname').value;
        const couponCode = document.getElementById('couponCode').value;
        const DiscountPercentage = parseFloat(document.getElementById('DiscountPercentage').value);
        const MaxDiscount = parseFloat(document.getElementById('MaxDiscount').value);
        const ActivateDate = document.getElementById('ActivateDate').value;
        const ExpiryDate = document.getElementById('ExpiryDate').value;
        const CriteriaAmount = parseFloat(document.getElementById('CriteriaAmount').value);

        const data = {
            couponname,
            couponCode,
            DiscountPercentage,
            MaxDiscount,
            ActivateDate,
            ExpiryDate,
            CriteriaAmount
        };
        const x = 's';

        console.log(data);

        fetch('/admin/addcoupon', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data, { x })
        })
            .then(response => response.json())
            .then(data => {
                if (data.status) {
                    Swal.fire({
                        icon: 'success',

                    });
                    window.location.href = "/admin/coupon";

                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Coupon is already added',
                    });


                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

















